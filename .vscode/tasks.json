{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "cplus_main",
			"command": "g++",
			"args": [
				"-g",
				"-std=c++17",
				"-I${workspaceFolder}/glad/include",
				"-I${workspaceFolder}/glfw/include",
				"-I${workspaceFolder}/include",
				"-L${workspaceFolder}/glfw/lib-mingw-w64",
				"${workspaceFolder}/glad/src/glad.c",
				"${file}",
				"-lglfw3dll",
				"-o",
				"${workspaceFolder}/main.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "使用g++编译"
		}
	]
}
